@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Name</th>
        <th>Title</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a href="#" class="btn mb-1 btn-rounded  btn-outline-dark">Details</a></td>
            <td><a href="/Staff/UpdateStaff/@item.Id" class="btn mb-1 btn-rounded  btn-outline-success">Update</a></td>
            <td><a href="/Staff/DeleteStaff/@item.Id" class="btn mb-1 btn-rounded  btn-outline-danger">Delete</a></td>
        </tr>
    }
</table>
<a href="/Staff/AddStaff/" class="btn mb-1 btn-rounded  btn-outline-primary">Add Staff</a>