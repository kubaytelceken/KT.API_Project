@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Services</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Title</td>
            <td><a href="#" class="btn mb-1 btn-rounded  btn-outline-dark">Details</a></td>
            <td><a href="/Service/UpdateService/@item.Id" class="btn mb-1 btn-rounded  btn-outline-success">Update</a></td>
            <td><a href="/Service/DeleteService/@item.Id" class="btn mb-1 btn-rounded  btn-outline-danger">Delete</a></td>
        </tr>
    }
</table>
<a href="/Service/AddService/" class="btn mb-1 btn-rounded  btn-outline-primary">Add Service</a>